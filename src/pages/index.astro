---
import ActivitiesTable from "../components/activities-table.astro";
import Break from "../components/break.astro";
import CarRental from "../components/car-rental.astro";
import Header from "../components/header.astro";
import Hotel from "../components/hotel.astro";
import LinkGithub from "../components/link-github.astro";
import Notes from "../components/notes.astro";
import PrintPrompt from "../components/print-prompt.astro";
import TravelTable from "../components/travel-table.astro";
import Underline from "../components/underline.astro";

import "../style/global.css";

const main_trip_table_size = 5;
const middle_trip_table_size = 3;
const activity_table_size = 5;
---

<!DOCTYPE html>
<html lang="en" class="text-[3vw]">
  <head>
    <Header
      description="A simple printable itinerary planner to help organize trips."
      keywords="trip,travel,journey,planner,template,print,printable,open-source,oss,foss"
    />
  </head>

  <body class="font-sans font-bold text-sky-700 border-sky-700 bg-white">
    <PrintPrompt />

    <div class="break-after-page">
      <h1 class="text-center text-4xl">Itinerary Planner</h1><Break />
      <div class="flex flex-row space-x-6">
        <div class="w-1/2">
          <Underline>Departure:</Underline>
        </div><div class="w-1/2">
          <Underline>Return:</Underline>
        </div>
      </div><Break />
      <TravelTable size={main_trip_table_size}>
        Outward journey
      </TravelTable><Break />
      <CarRental /><Break />
      <Hotel />
    </div>

    <div class="break-after-page">
      <ActivitiesTable size={activity_table_size}>
        Activities
      </ActivitiesTable><Break />
      <TravelTable size={middle_trip_table_size}>Journey</TravelTable><Break />
      <CarRental /><Break />
      <Hotel />
    </div>

    <div>
      <ActivitiesTable size={activity_table_size}>
        Activities
      </ActivitiesTable><Break />
      <TravelTable size={main_trip_table_size}>
        Return journey
      </TravelTable><Break />
      <Notes size={5} />
      <Break /><Break />
      <div class="w-full text-right inline-block">
        <LinkGithub />
      </div>
    </div>
  </body>
</html>

---
const { size } = Astro.props;
const rows = typeof size === "undefined" ? 0 : size - 1;
---

<div class="mb-2 text-xl"><slot /></div>
<table class="table-fixed w-full">
  <thead>
    <th class="w-3/12 border-bottom-standard border-right-standard">From</th>
    <th class="w-3/12 border-bottom-standard border-x-standard">To</th>
    <th class="w-2/12 border-bottom-standard border-x-standard">Departure</th>
    <th class="w-2/12 border-bottom-standard border-left-standard">Arrival</th>
    <th class="w-2/12 border-bottom-standard border-left-standard">Code</th>
  </thead>
  {
    Array(rows)
      .fill(null)
      .map(() => (
        <tr>
          <td class="border-bottom-standard border-right-standard invisible text-lg">
            Placeholder
          </td>
          <td class="border-bottom-standard border-x-standard" />
          <td class="border-bottom-standard border-x-standard" />
          <td class="border-bottom-standard border-x-standard" />
          <td class="border-bottom-standard border-left-standard" />
        </tr>
      ))
  }
  <tr>
    <td class="border-right-standard invisible text-lg">Placeholder</td>
    <td class="border-x-standard"></td>
    <td class="border-x-standard"></td>
    <td class="border-x-standard"></td>
    <td class="border-left-standard"></td>
  </tr>
</table>

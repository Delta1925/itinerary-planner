<div
  class="invisible print:invisible fixed bottom-1/2 right-1/2 translate-x-1/2 translate-y-1/2 bg-white drop-shadow-2xl flex-col space-y-4 border-standard border-current p-4 rounded-md text-center items-center"
  id="controls"
>
  <div class="flex flex-row space-x-4">
    <button
      class="w-24 drop-shadow-xl hover:drop-shadow-2xl hover:bg-neutral-200 border-standard border-current p-4 rounded-md"
      id="print_prompt"
    >
      Print
    </button>
    <button
      class="w-24 drop-shadow-xl hover:drop-shadow-2xl hover:bg-neutral-200 border-standard border-current p-4 rounded-md"
      id="hide_prompt"
    >
      Hide
    </button>
  </div>
  <p>Reload the page to show this prompt again!</p>
</div>

<script>
  const print = document.getElementById("print_prompt")!;
  const controls = document.getElementById("controls")!;
  const hide = document.getElementById("hide_prompt")!;

  controls.classList.replace("invisible", "flex");

  print.addEventListener("click", () => {
    window.print();
  });

  hide.addEventListener("click", () => {
    controls.classList.add("invisible");
  });
</script>

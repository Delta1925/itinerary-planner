<div
  class="hidden fixed bottom-1/2 right-1/2 translate-x-1/2 translate-y-1/2 bg-white drop-shadow-2xl flex-col space-y-4 border-standard border-current p-4 rounded-md text-center items-center"
  id="controls"
>
  <div class="flex flex-row space-x-4">
    <button
      class="min-w-fit w-24 drop-shadow-xl hover:drop-shadow-2xl bg-white hover:bg-neutral-200 border-standard border-current p-4 rounded-md text-center cursor-pointer"
      id="print_prompt"
    >
      Print
    </button>
    <button
      class="min-w-fit w-24 drop-shadow-xl hover:drop-shadow-2xl bg-white hover:bg-neutral-200 border-standard border-current p-4 rounded-md text-center cursor-pointer"
      id="hide_prompt"
    >
      Hide
    </button>
  </div>
  <p>Reload the page to show this prompt again!</p>
</div>

<script>
  const print = document.getElementById("print_prompt")!;
  const controls = document.getElementById("controls")!;
  const hide = document.getElementById("hide_prompt")!;

  controls.classList.add("flex");
  controls.classList.remove("hidden");

  print.addEventListener("click", () => {
    controls.classList.add("hidden");
    window.print();
    controls.classList.remove("hidden");
  });

  hide.addEventListener("click", () => {
    controls.classList.add("hidden");
  });
</script>

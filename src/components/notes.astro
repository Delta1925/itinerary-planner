---
const { size } = Astro.props;
const rows = typeof size === "undefined" ? 1 : size;
---

<div class="flex flex-col w-full">
  <h2 class="text-xl">Notes:</h2>
  {
    Array(rows)
      .fill(null)
      .map(() => (
        <div class="w-full border-b-standard border-current">
          <p class="invisible">Placeholder</p>
        </div>
      ))
  }
</div>
